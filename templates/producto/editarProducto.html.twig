{% extends 'base.html.twig' %}

{% block title %}Hello EDIT PRODUCT!{% endblock %}

{% block body %}
        <div class="container"style="text-align:center; margin-top:100px; background-color:#3b3737; color: #f7f7f7">
            <h1 style="margin-bottom:20px">EDITAR PRODUCTO</h1>
            
            {{ form_start(form) }}
                <div class="form-group" style="width:300px;margin-left:500px; margin-bottom:15px;">
                    {{ form_label(form.nombre) }}
                    {{ form_widget(form.nombre, {'attr': {'class': 'form-control'}}) }}
                </div>
                <div class="form-group" style="width:300px;margin-left:500px; margin-bottom:15px">
                    {{ form_label(form.descripcion,) }}
                    {{ form_widget(form.descripcion, {'attr': {'class': 'form-control'}}) }}
                </div>
                <div class="form-group" style="width:300px;margin-left:500px; margin-bottom:15px">
                    {{ form_label(form.precio) }}
                    {{ form_widget(form.precio, {'attr': {'class': 'form-control'}}) }}
                </div>
                <div class="form-group" style="width:150px; margin-left:570px; margin-bottom:15px">
                    {{ form_label(form.stock) }}
                    {{ form_widget(form.stock, {'attr': {'class': 'form-control'}}) }}
                </div style="margin-bottom:15px">
                {{ form_widget(form.save, {'attr': {'class': 'btn btn-primary'}}) }}
            {{ form_end(form) }}
        </div>
{% endblock %}
