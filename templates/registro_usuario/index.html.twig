{% extends 'base.html.twig' %}

{% block title %}REGISTRO DE USUARIO!{% endblock %}

{% block body %}
    <div class="container">
        <h1>Registro de usuario</h1>
        {{ form_start(formulario) }}
            <div class="form-group">
                {{ form_label(formulario.email) }}
                {{ form_widget(formulario.email, {'attr': {'class': 'form-control'}}) }}
            </div>
            <div class="form-group">
                {{ form_label(formulario.password) }}
                {{ form_widget(formulario.password, {'attr': {'class': 'form-control'}}) }}
            </div>
            {{ form_widget(formulario.save, {'attr': {'class': 'btn btn-primary'}}) }}
        {{ form_end(formulario) }}
    </div>
    {% if app.session.flashbag.has('success') %}
    <div class="alert alert-success">
        {{ app.session.flashbag.get('success')[0] }}
    </div>
{% endif %}
{% endblock %}
