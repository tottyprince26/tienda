{% extends 'base.html.twig' %}

{% block title %}Hello DashboardController!{% endblock %}
{% block body %}

<!DOCTYPE html>
<html>
  <head>
   
    <title>Dashboard de productos</title>
    <style type="text/css">
      * {
        margin: 0;
        padding: 0;
      }

      body {
        font-family: sans-serif;
        background-color: #f3f3f3; 
      }

      .container { 
        width: 1000px; 
        margin: 0 auto; 
      }

      h1 { 
        text-align: center; 
        font-weight: normal; 
        color: #444;  														   }

      .dashboard {   width: 100%;   margin-top: 20px;}

      .dashboard table {     width: 100%;     border-collapse: collapse;}

      .dashboard table th, td{    text-align: left;    padding: 10px;}

      .dashboard table th {     background-color:#444;     color:#fff;}

      .dashboard table tr td{    background-color:#f2f2f2;}

      .redes-sociales-icono:hover {
        opacity: 0.8;
        transition: all 0.2s ease-in-out;
      }
      .redes-sociales-icono:hover {
        opacity: 0.8;
        transition: all 0.2s ease-in-out;
      }
      .redes-sociales-icono:hover {
        transform: scale(1.2);
        transition: all 0.2s ease-in-out;
      }
    </style>   
</head> 
<body>
  <div style="background-color:black; color: white">
    {% if app.user %}
      <div class="mb-3">
        BIENVENIDO. <strong>{{ app.user.userIdentifier }}</strong>
        {{ app.user.id }}
      </div>
    {% endif %}
  </div>

<div id="carouselExampleFade" class="carousel slide carousel-fade">
  <div class="carousel-inner">
    <div class="carousel-item active">
      <img src=""  style="height:300px" class="d-block w-100" alt="producto1">
    </div>
    <div class="carousel-item">
      <img src="" class="d-block w-100" alt="producto2">
    </div>
    <div class="carousel-item">
      <img src="" class="d-block w-100" alt="producto3">
    </div>
  </div>
  <button class="carousel-control-prev" type="button" data-bs-target="#carouselExampleFade" data-bs-slide="prev">
    <span class="carousel-control-prev-icon" aria-hidden="true"></span>
    <span class="visually-hidden">Previous</span>
  </button>
  <button class="carousel-control-next" type="button" data-bs-target="#carouselExampleFade" data-bs-slide="next">
    <span class="carousel-control-next-icon" aria-hidden="true"></span>
    <span class="visually-hidden">Next</span>
  </button>
</div>

  <div class="container">
    <div class="row">
      <div class="col-md-12">
        <h1>Productos</h1>
        <div class="dashboard">
         <div class= "row">
          {% for producto in productos %}
               <div class="col mb-3 mx-2">
                <div class="card" style="width: 18rem;">
                  <img src="{{ path('app_producto_imagen', {'id': producto.id}) }}" alt="imagen" class="card-img-top" style="height:200px" alt="...">
                  <div class="card-body">
                    <h5 class="card-title">{{ producto.nombre }} {{ producto.precio }}</h5>
                    <p class="card-text">{{ producto.descripcion }}</p>
                    <a href="#" class="btn btn-primary">Go somewhere</a>
                  </div>
                </div>
              </div>
          {% endfor %}
          </div>
         
        </div>
      </div>
    </div>
    <script>
      
    </script>                
</body>

<footer style="background-color: #f9eee2; height: 100px">
   <div class="container" >
    <div class="row">
      <div class="col-md-12">
        <a href="https://www.facebook.com/TuUsuario/" target="_blank">
        <img src="https://cdn-icons-png.flaticon.com/512/1384/1384005.png" alt="Facebook" width="30" height="30" class="redes-sociales-icono">
        </a>
        <a href="https://twitter.com/TuUsuario/" target="_blank">
        <img src="https://cdn-icons-png.flaticon.com/512/3669/3669691.png" alt="Twitter" width="30" height="30" class="redes-sociales-icono">
        </a>
        <a href="https://www.instagram.com/TuUsuario/" target="_blank">
        <img src="https://cdn-icons-png.flaticon.com/512/3670/3670274.png" alt="Instagram" width="30" height="30" class="redes-sociales-icono">
        </a>
        <p class="text-center">Todos los derechos reservados</p>
      </div>
    </div>
  </div>
</footer>

</html>
{% endblock %}
